<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',  // change this value according to your HTML
            auto_focus: 'element1'
        });
    </script>

    <style>
        body {
            padding: 0 !important;
            margin-top: 0 !important;
        }

        .navbar-fixed-left {
            padding-top: 10px;
            width: 250px;
            position: fixed;
            border-radius: 0;
            height: 100%;
        }

            .navbar-fixed-left .navbar-nav > li {
                float: none; /* Cancel default li float: left */
                width: 139px;
            }

            .navbar-fixed-left + .container {
                padding-left: 160px !important;
            }

        .container {
            height: 1000px;
        }

        .wrapper {
            margin-left: 140px;
        }

        .avatar {
            vertical-align: middle;
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 5px solid #555;
            margin: 0 auto;
        }

        @@media (min-width: 768.5px) {
            #icon {
                display: none;
            }
        }
            

            @@media (max-width: 768px) {
                .navbar-fixed-left {
                    width: 80px;
                    position: fixed;
                    border-radius: 0;
                    height: 100%;
                    margin: auto;
                    padding: 5px;
                }

                #avatar {
                    display: none;
                }

                .link {
                    display: none;
                }
            }
    </style>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
    <div class="navbar navbar-inverse navbar-fixed-left">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <img src="~/Images/profile.png" class="img-responsive avatar" alt="" id="avatar"/>
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="fa fa-home fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>Home</strong>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Authors")">
                            <i class="fa fa-user fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>Authors</strong>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Projects")">
                            <i class="fa fa-newspaper-o fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>Projects</strong>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Image")">
                            <i class="fa fa-picture-o fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>Images</strong>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Categories")">
                            <i class="fa fa-cubes fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>Categories</strong>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About", "Home")">
                            <i class="fa fa-info-circle fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>About</strong>
                            </span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact", "Home")">
                            <i class="fa fa-envelope fa-2x" id="icon"></i>
                            <span class="link">
                                <strong>Contact</strong>
                            </span>
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    }
    else
    {
    <div class="navbar navbar-inverse navbar-fixed-left">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <img src="~/Images/profile.png" class="img-responsive avatar" alt="" id="avatar"/>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Projects", "Index", "Projects")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div> 
        </div>
    </div>
    }
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
